{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    },
    "environments": {
        "development": {
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "healthcheckPath": "/api/health",
                "healthcheckTimeout": 180,
                "restartPolicyType": "ON_FAILURE"
            }
        },
        "production": {
            "build": {
                "builder": "DOCKERFILE",
                "dockerfilePath": "Dockerfile"
            },
            "deploy": {
                "healthcheckPath": "/api/health",
                "healthcheckTimeout": 300,
                "restartPolicyType": "ON_FAILURE"
            }
        }
    }
}

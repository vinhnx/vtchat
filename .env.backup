# Production Environment Variables
# These will be set in Vercel dashboard or via CLI

# Better-Auth
BETTER_AUTH_SECRET=your_production_secret_here
BETTER_AUTH_URL=https://your-domain.vercel.app
BETTER_AUTH_ENV=production
BASE_URL=https://your-domain.vercel.app

# Social auth providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Payment Configuration - Creem.io (Use live for production)
CREEM_API_KEY=creem_live_your_live_key_here
CREEM_WEBHOOK_SECRET=your_creem_webhook_secret_here
CREEM_PRODUCT_ID=your_product_id
CREEM_ENVIRONMENT=production

# Product configuration
PRODUCT_NAME=VT+
PRODUCT_DESCRIPTION=For everyday productivity
VT_PLUS_PRICE=9.99
PRICING_CURRENCY=USD
PRICING_INTERVAL=monthly

# Logging configuration
LOG_LEVEL=info

# Database configuration - Neon PostgreSQL (Production)
DATABASE_URL=postgresql://username:password@hostname.neon.tech/dbname?sslmode=require
NEON_PROJECT_ID=your_neon_project_id
NEON_API_KEY=your_neon_api_key

# Jina API configuration
JINA_API_KEY=your_jina_api_key

# Public URLs for production
NEXT_PUBLIC_COMMON_URL=https://your-domain.vercel.app
NEXT_PUBLIC_BETTER_AUTH_URL=https://your-domain.vercel.app
NEXT_PUBLIC_BASE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

RESEND_API_KEY=your_resend_api_key

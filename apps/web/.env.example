# Local Development Environment Variables for VT
# Copy this file to .env.local and fill in the actual values

# Better-Auth Configuration
BETTER_AUTH_SECRET=your_secret_here_minimum_32_characters
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_ENV=development
BASE_URL=http://localhost:3000

# Next.js Public URLs (for local development)
NEXT_PUBLIC_COMMON_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Social Auth Providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database Configuration - Neon PostgreSQL
# Get these from your Neon dashboard: https://console.neon.tech/
DATABASE_URL=postgresql://username:password@hostname.neon.tech/dbname?sslmode=require
NEON_PROJECT_ID=your_neon_project_id
NEON_API_KEY=your_neon_api_key

# Redis Configuration - Upstash (for credits and sessions)
# Get these from your Upstash dashboard: https://console.upstash.com/
KV_URL=your_upstash_redis_url
KV_REST_API_URL=your_upstash_rest_url
KV_REST_API_TOKEN=your_upstash_rest_token
KV_REST_API_READ_ONLY_TOKEN=your_upstash_readonly_token
REDIS_URL=your_upstash_redis_url

# Alternative Upstash Redis environment variables (same values as above)
UPSTASH_REDIS_REST_URL=your_upstash_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_rest_token

# Payment Configuration - Creem.io
# Get these from your Creem.io dashboard
CREEM_API_KEY=creem_test_your_test_key_here
CREEM_WEBHOOK_SECRET=whsec_your_webhook_secret
CREEM_PRODUCT_ID=prod_your_product_id
CREEM_ENVIRONMENT=sandbox

# Product Configuration
PRODUCT_NAME=VT+
PRODUCT_DESCRIPTION=For everyday productivity
VT_PLUS_PRICE=9.99
PRICING_CURRENCY=USD
PRICING_INTERVAL=month

# Logging Configuration
LOG_LEVEL=info

# External APIs
JINA_API_KEY=your_jina_api_key

# Email Configuration (optional, for email notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
NEON_PROJECT_ID=your_neon_project_id
NEON_API_KEY=your_neon_api_key

# Vercel KV Redis configuration (optional, used for rate limiting)
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_rest_api_read_only_token
REDIS_URL=your_redis_url

# Jina API configuration
JINA_API_KEY=your_jina_api_key

NEXT_PUBLIC_COMMON_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=${{NEXT_PUBLIC_COMMON_URL}}
NEXT_PUBLIC_BASE_URL=${{NEXT_PUBLIC_COMMON_URL}}
NEXT_PUBLIC_APP_URL=${{NEXT_PUBLIC_COMMON_URL}}

RESEND_API_KEY=

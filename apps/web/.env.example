# Better-Auth https://www.better-auth.com/docs/installation
BETTER_AUTH_SECRET=your_secret_here
BASE_URL=http://localhost:3000

# Development Configuration
# Set to "true" to bypass all restrictions (credits, subscriptions, gated features) for development/testing
NEXT_PUBLIC_DEV_TEST_MODE=false

# Social auth providers for Better Auth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email configuration for Better Auth
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Payment Configuration - Creem.io
# API Key for Creem.io - Use sandbox key (creem_test_*) for development, live key (creem_live_*) for production
CREEM_API_KEY=your_creem_api_key_here
# Webhook secret for verifying Creem.io webhook signatures
CREEM_WEBHOOK_SECRET=your_creem_webhook_secret_here
# Product ID for VT+ subscription (don't hardcode in code)
CREEM_PRODUCT_ID=

# Database configuration - Neon PostgreSQL
# Replace with your Neon database connection string
# Format: postgresql://[username]:[password]@[hostname]/[database]?sslmode=require
DATABASE_URL=postgresql://username:password@hostname.neon.tech/dbname?sslmode=require

# Vercel KV Redis configuration (optional, used for rate limiting)
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_rest_api_read_only_token
REDIS_URL=your_redis_url

NEXT_PUBLIC_APP_URL=http://localhost:3000
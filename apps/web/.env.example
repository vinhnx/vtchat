# Better-Auth https://www.better-auth.com/docs/installation
BETTER_AUTH_SECRET=your_secret_here
BASE_URL=http://localhost:3000

# Social auth providers for Better Auth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email configuration for Better Auth
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Polar.sh Configuration
# Set to 'sandbox' for development, 'production' for production
POLAR_ENVIRONMENT=sandbox
POLAR_ACCESS_TOKEN=your_polar_access_token_here
POLAR_SUCCESS_URL=http://localhost:3000/success?checkout_id={CHECKOUT_ID}
POLAR_CANCEL_URL=http://localhost:3000/credits

# Polar.sh Price IDs (actual price UUIDs from your Polar.sh sandbox)
# These are the price UUIDs from your products, not product IDs
POLAR_VT_PLUS_PRICE_ID=415775b5-608e-4541-a584-23ef51f57aca
POLAR_CREDITS_100_PRICE_ID=14b61439-f27b-415c-bc66-c3ccc820786c
POLAR_CREDITS_500_PRICE_ID=3e4787b7-3d3c-438e-b865-ad39c294612b
POLAR_CREDITS_1000_PRICE_ID=d0b6a85c-e888-4c2e-8c95-910b9ba9496d

# Database configuration
DATABASE_URL=sqlite:./vtchat.db

# Credit System Configuration
FREE_CREDITS_LIMIT_REQUESTS_AUTH=3
FREE_CREDITS_LIMIT_REQUESTS_IP=1

# Vercel KV Redis configuration for credit storage
KV_URL=your_kv_url
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
KV_REST_API_READ_ONLY_TOKEN=your_kv_rest_api_read_only_token
REDIS_URL=your_redis_url
{
    "name": "vtchat",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "start": "cd apps/web && bun start",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "knip": "knip",
        "bundle:analyze": "cd apps/web && ANALYZE=true bun run build",
        "bundle:track": "node scripts/track-bundle-size.js track",
        "bundle:history": "node scripts/track-bundle-size.js history"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.2.9",
        "@tailwindcss/typography": "^0.5.0-alpha.3",
        "@types/node": "^24.0.3",
        "@typescript-eslint/parser": "^8.34.1",
        "autoprefixer": "10.4.21",
        "drizzle-kit": "^0.31.1",
        "eslint": "^9.29.0",
        "eslint-config-next": "^15.3.3",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "knip": "^5.61.1",
        "postcss": "8.5.4",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "tailwindcss": "3.4.17",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "turbo": "latest",
        "typescript": "^5.8.3"
    },
    "packageManager": "bun@1.1.19",
    "workspaces": [
        "apps/*",
        "packages/*",
        "!apps/*/.next",
        "!**/node_modules"
    ],
    "dependencies": {
        "@ai-sdk/google": "^1.2.19",
        "@mozilla/readability": "^0.6.0",
        "@neondatabase/serverless": "^1.0.1",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@typescript-eslint/eslint-plugin": "^8.34.1",
        "@vercel/functions": "^2.2.0",
        "better-auth": "^1.2.9",
        "better-auth-harmony": "^1.2.5",
        "creem": "^0.3.37",
        "date-fns": "^4.1.0",
        "next": "^15.3.3",
        "next-themes": "^0.4.6",
        "node-html-parser": "^7.0.1",
        "pg": "^8.16.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-dropzone": "^14.3.8",
        "react-intersection-observer": "^9.16.0",
        "remark-slug": "^8.0.0",
        "turndown": "^7.2.0"
    }
}

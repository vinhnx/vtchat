{
    "name": "vtchat",
    "version": "1.0.0",
    "description": "An intelligent chat application powered by AI with advanced conversational capabilities",
    "private": true,
    "author": "Vinh Nguyen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vinhnx/vtchat.git"
    },
    "keywords": [
        "ai",
        "chat",
        "conversation",
        "nextjs",
        "react",
        "typescript",
        "tailwindcss"
    ],
    "homepage": "https://github.com/vinhnx/vtchat#readme",
    "bugs": {
        "url": "https://github.com/vinhnx/vtchat/issues"
    },
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "dev-no-turbo": "turbo run dev-no-turbo",
        "dev:scan": "REACT_SCAN_ENABLED=true turbo run dev",
        "start": "cd apps/web && bun start",
        "lint": "oxlint",
        "lint:urls": "node scripts/check-hardcoded-urls.mjs",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.md\"",
        "format:check": "prettier --check \"**/*.md\"",
        "prepare": "husky",
        "knip": "knip",
        "bundle:analyze": "cd apps/web && ANALYZE=true bun run build",
        "bundle:track": "node scripts/track-bundle-size.js track",
        "bundle:history": "node scripts/track-bundle-size.js history",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage",
        "fmt": "dprint fmt",
        "fmt:check": "dprint check",
        "check": "bun run fmt:check && bun run lint"
    },
    "devDependencies": {
        "@better-auth/cli": "^1.4.5",
        "@flydotio/dockerfile": "^0.7.10",
        "@tailwindcss/postcss": "^4.1.17",
        "@tailwindcss/typography": "^0.5.19",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.10.1",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "autoprefixer": "10.4.21",
        "dprint": "^0.50.2",
        "drizzle-kit": "^0.31.8",
        "entities": "^6.0.1",
        "globals": "^16.5.0",
        "happy-dom": "^20.0.0",
        "jsdom": "^26.1.0",
        "knip": "^5.71.0",
        "oxlint": "^1.31.0",
        "postcss": "8.5.4",
        "prettier": "^3.7.4",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "tailwindcss": "^4.1.17",
        "tsconfig-paths-webpack-plugin": "^4.2.0",
        "turbo": "^2.6.3",
        "typescript": "^5.9.3",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "packageManager": "bun@1.1.19",
    "engines": {
        "node": ">=20.0.0",
        "bun": ">=1.1.19"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "!apps/*/.next",
        "!**/node_modules"
    ],
    "resolutions": {
        "entities": "6.0.1",
        "htmlparser2": "10.0.0"
    },
    "dependencies": {
        "@ai-sdk/anthropic": "^1.2.12",
        "@ai-sdk/fireworks": "^0.1.18",
        "@ai-sdk/google": "^1.2.22",
        "@ai-sdk/openai": "^1.3.24",
        "@ai-sdk/openai-compatible": "^0.2.16",
        "@ai-sdk/provider": "^1.1.3",
        "@ai-sdk/togetherai": "^0.1.18",
        "@ai-sdk/xai": "^1.2.18",
        "@better-auth/utils": "^0.2.6",
        "@hookform/resolvers": "^5.2.2",
        "@mozilla/readability": "^0.6.0",
        "@neondatabase/serverless": "^1.0.2",
        "@react-spring/web": "^9.7.5",
        "@t3-oss/env-nextjs": "^0.13.8",
        "@tanstack/react-query": "^5.90.12",
        "@tanstack/react-table": "^8.21.3",
        "@types/mdx": "^2.0.13",
        "@types/pino": "^7.0.5",
        "@types/react": "19.1.8",
        "@types/react-dom": "19.1.6",
        "@types/react-window": "^1.8.8",
        "@vercel/functions": "^2.2.13",
        "ai": "^4.3.19",
        "better-auth": "^1.4.6-beta.3",
        "better-auth-harmony": "^1.2.5",
        "cobe": "^0.6.5",
        "creem": "^0.3.37",
        "critters": "^0.0.25",
        "date-fns": "3.6.0",
        "drizzle-orm": "^0.44.7",
        "fumadocs-core": "^15.8.5",
        "fumadocs-mdx": "^11.10.1",
        "fumadocs-ui": "^15.8.5",
        "husky": "^9.1.7",
        "isbot": "^5.1.32",
        "legid": "^0.1.4",
        "next": "15.5.7",
        "next-themes": "^0.4.6",
        "node-fetch": "^3.3.2",
        "node-html-parser": "^7.0.1",
        "oxc": "^1.0.1",
        "pdfjs-dist": "^5.4.449",
        "pdfkit": "^0.17.2",
        "pg": "^8.16.3",
        "pino": "^9.14.0",
        "pino-pretty": "^13.1.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-dropzone": "^14.3.8",
        "react-hook-form": "^7.68.0",
        "react-intersection-observer": "^9.16.0",
        "react-scan": "^0.4.3",
        "react-window": "^1.8.11",
        "remark-slug": "^8.0.0",
        "turndown": "^7.2.2",
        "zustand": "^5.0.9"
    },
    "overrides": {
        "@types/react": "19.1.8",
        "@types/react-dom": "19.1.6",
        "entities": "6.0.1",
        "shiki": "3.12.2",
        "@shikijs/core": "3.12.2",
        "@shikijs/engine-javascript": "3.12.2",
        "@shikijs/engine-oniguruma": "3.12.2",
        "@shikijs/langs": "3.12.2",
        "@shikijs/themes": "3.12.2",
        "@shikijs/types": "3.12.2",
        "htmlparser2": "10.0.0"
    }
}

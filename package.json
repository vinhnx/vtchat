{
    "name": "vtchat",
    "version": "1.0.0",
    "description": "An intelligent chat application powered by AI with advanced conversational capabilities",
    "private": true,
    "author": "Vinh Nguyen",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vinhnx/vtchat.git"
    },
    "keywords": [
        "ai",
        "chat",
        "conversation",
        "nextjs",
        "react",
        "typescript",
        "tailwindcss"
    ],
    "homepage": "https://github.com/vinhnx/vtchat#readme",
    "bugs": {
        "url": "https://github.com/vinhnx/vtchat/issues"
    },
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev",
        "dev-no-turbo": "turbo run dev-no-turbo",
        "dev:scan": "REACT_SCAN_ENABLED=true turbo run dev",
        "start": "cd apps/web && bun start",
        "lint": "oxlint",
        "lint:urls": "node scripts/check-hardcoded-urls.mjs",
        "clean": "turbo run clean && rm -rf node_modules",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
        "biome:check": "biome check --write .",
        "biome:lint": "biome lint --write .",
        "biome:format": "biome format --write .",
        "biome:format-files": "biome format --write",
        "prepare": "husky",
        "knip": "knip",
        "bundle:analyze": "cd apps/web && ANALYZE=true bun run build",
        "bundle:track": "node scripts/track-bundle-size.js track",
        "bundle:history": "node scripts/track-bundle-size.js history",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage"
    },
    "devDependencies": {
        "@biomejs/biome": "2.0.6",
        "@tailwindcss/postcss": "^4.1.11",
        "@testing-library/jest-dom": "^6.6.4",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.2.1",
        "@vitejs/plugin-react": "^4.7.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "happy-dom": "^18.0.1",
        "jsdom": "^26.1.0",
        "knip": "^5.62.0",
        "oxlint": "^1.11.1",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "turbo": "^2.5.5",
        "typescript": "^5.9.2",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
    },
    "packageManager": "bun@1.1.19",
    "engines": {
        "node": ">=20.0.0",
        "bun": ">=1.1.19"
    },
    "workspaces": [
        "apps/*",
        "packages/*",
        "!apps/*/.next",
        "!**/node_modules"
    ],
    "dependencies": {
        "@neondatabase/serverless": "^1.0.1",
        "@types/react": "19.1.8",
        "@types/react-dom": "19.1.6",
        "@vercel/functions": "^2.2.8",
        "ai": "^4.3.19",
        "better-auth": "^1.3.4",
        "better-auth-harmony": "^1.2.5",
        "creem": "^0.3.37",
        "drizzle-orm": "^0.44.4",
        "husky": "^9.1.7",
        "next": "15.4.1",
        "next-themes": "^0.4.6",
        "pdfjs-dist": "^5.4.54",
        "pg": "^8.16.3",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-dropzone": "^14.3.8",
        "react-intersection-observer": "^9.16.0",
        "react-scan": "^0.4.3"
    },
    "overrides": {
        "@types/react": "19.1.8",
        "@types/react-dom": "19.1.6"
    }
}

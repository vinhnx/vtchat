# Run Biome format on staged files to auto-fix what we can
echo "ğŸ”§ Auto-formatting staged files with Biome..."
bunx biome format --write --staged

# Run oxlint for fast linting check (non-blocking)
echo "ğŸ” Running oxlint checks..."
bun run lint 2>/dev/null || echo "âš ï¸  oxlint found some issues (non-blocking)"

# Optional: Run full build check only if STRICT_COMMIT is set
if [ "$STRICT_COMMIT" = "true" ]; then
    echo "ğŸ—ï¸  Running strict build check..."
    bun run build
    if [ $? -ne 0 ]; then
        echo "âŒ Build failed. Fix compilation errors before committing."
        exit 1
    fi
fi

echo "âœ… Pre-commit checks completed!"
echo "ğŸ’¡ Run 'STRICT_COMMIT=true git commit' for full validation"

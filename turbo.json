{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "dev-no-turbo": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "dependsOn": ["^test"],
            "outputs": ["coverage/**"]
        },
        "test:run": {
            "dependsOn": ["^test:run"],
            "outputs": ["coverage/**"]
        },
        "test:coverage": {
            "dependsOn": ["^test:coverage"],
            "outputs": ["coverage/**"]
        }
    }
}
